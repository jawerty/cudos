extends layout
block content
	ol
		- n = parseInt(page) + 1
		- b = parseInt(page) - 1
		for site in links
			li
				a(href="#{site.link}") #{site.title}

				label(style="color: #ff6b54") &nbsp;&nbsp; #{site.cudos}
	if page <= 0
		form(method="get")
			input(type="hidden" name="page" value="#{n}")
			input(type="submit", value="next", style="background-color: #ff6b54; outline: none; box-shadow: none; border-radius: 5px; color: #fff; padding: 1%; font-size: 150%")
	else
		form(method="get")
			input(type="hidden" name="page" value="#{b}" )
			input(type="submit", value="back", style="background-color: #ff6b54; outline: none; box-shadow: none; border-radius: 5px; color: #fff; padding: 1%; font-size: 150%")
		form(method="get")
			input(type="hidden" name="page" value="#{n}")
			input(type="submit", value="next", style="background-color: #ff6b54; outline: none; box-shadow: none; border-radius: 5px; color: #fff; padding: 1%; font-size: 150%")