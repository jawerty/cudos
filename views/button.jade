doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/button.css')
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
  body

    input(src="../images/theC.png" type="image" id="theC")
    div(id="counter")= cudos

    script(type="text/javascript").
      buttonEnabled = new Boolean(1);
      var theC = document.getElementById("theC");
      var counter = document.getElementById("counter");
      theC.onclick=function(){
        if (counter.style.opacity == 0) {
          $("#counter").fadeIn()
        }

        if(buttonEnabled){
          buttonEnabled=0;
          theC.style.opacity= '0.5';
        }
        else{
          buttonEnabled=1;
          theC.style.opacity= '';
        }
      };
